<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.fmt.mvi.learn.travel.model.TravelItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{item.article.images[0].dynamicUrl}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_location_bg"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:maxWidth="140dp"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingTop="1dp"
                android:paddingEnd="5dp"
                android:paddingBottom="1dp"
                android:text="@{item.article.pois[0].poiName}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@{item.article.articleTitle}"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_cover" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_author"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="10dp"
                app:isCircle="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:url="@{item.article.author.coverImage.dynamicUrl}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_author"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.article.author.nickName}"
                android:textColor="@color/common_text_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_author"
                app:layout_constraintLeft_toRightOf="@id/iv_author"
                app:layout_constraintTop_toTopOf="@id/iv_author" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_like"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_author"
                app:layout_constraintRight_toLeftOf="@+id/tv_like_count"
                app:layout_constraintTop_toTopOf="@id/iv_author"
                app:srcCompat="@drawable/ic_like"
                app:tint="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@{String.valueOf(item.article.likeCount)}"
                android:textColor="@color/common_text_color"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_like"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_like" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>